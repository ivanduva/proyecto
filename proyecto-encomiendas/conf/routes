# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                   controllers.Application.admin()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.at(path="/public", file)

GET     /admin                              controllers.Application.admin()

GET     /admin/servicios                    controllers.Application.servicios()

GET     /admin/puntos-de-venta              controllers.Application.puntos()

POST    /admin/puntos-de-venta              controllers.PuntoDeVentaController.agregarPunto()

GET     /admin/puntos-de-venta              controllers.PuntoDeVentaController.listarPuntos()

PUT     /admin/puntos-de-venta              controllers.PuntoDeVentaController.modificarPunto()

GET     /admin/personas                     controllers.Application.personas()
